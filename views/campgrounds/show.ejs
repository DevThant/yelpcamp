<% layout('layouts/boilerplate') %>
<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="card">
          <img src="<%= campground.image %> " class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= campground.title %></h5>

            <small class="text-muted"><%= campground.location %> </small>

            <p class="card-text"><%= campground.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">$<%= campground.price %>/Night</li>
            <li class="list-group-item">
              Submitted By <%= campground.author.username %>
            </li>
          </ul>
          <div class="card-body">
            <a href="/campgrounds" class="btn btn-primary">Back</a>
            <% if(loggedInUser && campground.author.equals(loggedInUser._id)){%>
            <a
              href="/campgrounds/<%= campground.id %>/edit"
              class="btn btn-primary"
              >Edit</a
            >
            <form
              class="d-inline"
              action="/campgrounds/<%= campground.id %>?_method=Delete"
              method="post"
            >
              <button class="btn btn-danger" type="submit">
                Delete Campground
              </button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
      <% if(loggedInUser){ %>
      <div class="row">
        <h2>Leave a Review</h2>
        <form
          action="/campgrounds/<%= campground.id %>/reviews"
          class="validated-form mb-3"
          method="post"
          novalidate
        >
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="range"
              class="form-range"
              min="1"
              max="5"
              name="review[rating]"
              id="rating"
              required
            />
          </div>
          <div class="mb-3">
            <label for="body" class="form-label">Review</label>
            <textarea
              name="review[body]"
              class="form-control"
              id="body"
              cols="30"
              rows="3"
              required
            ></textarea>
            <div class="invalid-feedback">Please write a review.</div>
          </div>
          <button class="btn btn-success" type="submit">Submit</button>
        </form>
      </div>
      <% } %>
    </div>
    <div class="col-6">
      <h3>Reviews</h3>
      <% for(let review of campground.reviews) {%>
      <div class="card w-75">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title">Raiting : <%= review.rating %></h5>

            <small class="text-muted mb-2 text-end">12/3/2022</small>
          </div>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= review.author.username %>
          </h6>
          <p class="card-text"><%= review.body %></p>

          <% if(loggedInUser && review.author.equals(loggedInUser._id)){%>
          <form
            class="d-inline"
            action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>?_method=Delete"
            method="post"
          >
            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
